# Environment Variables for Project Raven Configuration
# "The whispers that can change the realm's behavior"

# Environment selection (development, production, staging)
ENVIRONMENT=development

# Server Configuration
RAVEN_SERVER__HOST=0.0.0.0
RAVEN_SERVER__PORT=50051
RAVEN_SERVER__MAX_CONNECTIONS=1000
RAVEN_SERVER__HEARTBEAT_INTERVAL_SECONDS=30
RAVEN_SERVER__CLIENT_TIMEOUT_SECONDS=60
RAVEN_SERVER__ENABLE_COMPRESSION=true
RAVEN_SERVER__MAX_MESSAGE_SIZE=4194304

# Database Configuration
RAVEN_DATABASE__INFLUX_URL=http://localhost:8086
RAVEN_DATABASE__BUCKET=market_data
RAVEN_DATABASE__ORG=raven
RAVEN_DATABASE__TOKEN=your_influxdb_v2_token
RAVEN_DATABASE__CONNECTION_POOL_SIZE=20
RAVEN_DATABASE__CONNECTION_TIMEOUT_SECONDS=10
RAVEN_DATABASE__WRITE_TIMEOUT_SECONDS=5
RAVEN_DATABASE__QUERY_TIMEOUT_SECONDS=30
RAVEN_DATABASE__RETRY_ATTEMPTS=3
RAVEN_DATABASE__RETRY_DELAY_MS=1000
RAVEN_DATABASE__CIRCUIT_BREAKER_THRESHOLD=5
RAVEN_DATABASE__CIRCUIT_BREAKER_TIMEOUT_SECONDS=60

# Data Processing Configuration
RAVEN_DATA_PROCESSING__SNAPSHOT_INTERVAL_MS=5
RAVEN_DATA_PROCESSING__HIGH_FREQUENCY_BUFFER_SIZE=10000
RAVEN_DATA_PROCESSING__LOW_FREQUENCY_BUFFER_SIZE=1000
RAVEN_DATA_PROCESSING__PRIVATE_DATA_BUFFER_SIZE=500
RAVEN_DATA_PROCESSING__DATA_VALIDATION_ENABLED=true
RAVEN_DATA_PROCESSING__SANITIZATION_ENABLED=true
RAVEN_DATA_PROCESSING__DEAD_LETTER_QUEUE_SIZE=1000

# Retention Policies - High Frequency Data
RAVEN_RETENTION_POLICIES__HIGH_FREQUENCY__FULL_RESOLUTION_DAYS=7
RAVEN_RETENTION_POLICIES__HIGH_FREQUENCY__DOWNSAMPLED_DAYS=30
RAVEN_RETENTION_POLICIES__HIGH_FREQUENCY__ARCHIVE_DAYS=90
RAVEN_RETENTION_POLICIES__HIGH_FREQUENCY__AUTO_CLEANUP=true
RAVEN_RETENTION_POLICIES__HIGH_FREQUENCY__COMPRESSION_ENABLED=true

# Retention Policies - Low Frequency Data
RAVEN_RETENTION_POLICIES__LOW_FREQUENCY__FULL_RESOLUTION_DAYS=730
RAVEN_RETENTION_POLICIES__LOW_FREQUENCY__DOWNSAMPLED_DAYS=1095
RAVEN_RETENTION_POLICIES__LOW_FREQUENCY__ARCHIVE_DAYS=1825
RAVEN_RETENTION_POLICIES__LOW_FREQUENCY__AUTO_CLEANUP=true
RAVEN_RETENTION_POLICIES__LOW_FREQUENCY__COMPRESSION_ENABLED=true

# Retention Policies - Private Data
RAVEN_RETENTION_POLICIES__PRIVATE_DATA__FULL_RESOLUTION_DAYS=365
RAVEN_RETENTION_POLICIES__PRIVATE_DATA__DOWNSAMPLED_DAYS=730
RAVEN_RETENTION_POLICIES__PRIVATE_DATA__ARCHIVE_DAYS=1095
RAVEN_RETENTION_POLICIES__PRIVATE_DATA__AUTO_CLEANUP=false
RAVEN_RETENTION_POLICIES__PRIVATE_DATA__COMPRESSION_ENABLED=true

# Batching Configuration - Database Writes
RAVEN_BATCHING__DATABASE_WRITES__SIZE=1000
RAVEN_BATCHING__DATABASE_WRITES__TIMEOUT_MS=5
RAVEN_BATCHING__DATABASE_WRITES__MAX_MEMORY_MB=100
RAVEN_BATCHING__DATABASE_WRITES__COMPRESSION_THRESHOLD=500

# Batching Configuration - Client Broadcasts
RAVEN_BATCHING__CLIENT_BROADCASTS__SIZE=100
RAVEN_BATCHING__CLIENT_BROADCASTS__TIMEOUT_MS=1
RAVEN_BATCHING__CLIENT_BROADCASTS__MAX_MEMORY_MB=50
RAVEN_BATCHING__CLIENT_BROADCASTS__COMPRESSION_THRESHOLD=50

# Monitoring Configuration
RAVEN_MONITORING__METRICS_ENABLED=true
RAVEN_MONITORING__METRICS_PORT=9090
RAVEN_MONITORING__HEALTH_CHECK_PORT=8080
RAVEN_MONITORING__TRACING_ENABLED=true
RAVEN_MONITORING__LOG_LEVEL=info
RAVEN_MONITORING__PERFORMANCE_MONITORING=true