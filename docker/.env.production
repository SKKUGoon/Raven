# Project Raven - Production Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=50051
HEALTH_PORT=8080
METRICS_PORT=9090

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_DATABASE=market_data
INFLUXDB_USERNAME=raven
INFLUXDB_PASSWORD=CHANGE_ME_IN_PRODUCTION
INFLUXDB_ORG=house_raven
INFLUXDB_BUCKET=market_data
INFLUXDB_TOKEN=CHANGE_ME_IN_PRODUCTION

# Database Connection Pool
INFLUXDB_MAX_CONNECTIONS=20
INFLUXDB_CONNECTION_TIMEOUT=30
INFLUXDB_QUERY_TIMEOUT=60

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_TIMEOUT=5

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# High Frequency Data Processing
HF_SNAPSHOT_INTERVAL_MS=5
HF_BATCH_SIZE=1000
HF_BUFFER_SIZE=10000

# Low Frequency Data Processing
LF_BATCH_SIZE=100
LF_FLUSH_INTERVAL_MS=1000

# gRPC Configuration
GRPC_MAX_CONCURRENT_STREAMS=1000
GRPC_KEEPALIVE_TIME_MS=30000
GRPC_KEEPALIVE_TIMEOUT_MS=5000
GRPC_MAX_MESSAGE_SIZE=4194304

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Configuration
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION_TIME=15d

# Grafana Configuration
GRAFANA_ADMIN_USER=raven
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
GRAFANA_ALLOW_SIGN_UP=false

# Jaeger Configuration
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# TLS Configuration (for production)
TLS_ENABLED=false
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# Authentication (for production)
AUTH_ENABLED=false
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_EXPIRY_HOURS=24

# =============================================================================
# DATA RETENTION POLICIES
# =============================================================================

# High Frequency Data (orderbook, trades)
HF_RETENTION_DAYS=7
HF_DOWNSAMPLE_DAYS=1

# Low Frequency Data (candles, funding)
LF_RETENTION_DAYS=730

# Private Data (wallet, positions)
PRIVATE_RETENTION_DAYS=365

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Memory Limits (in MB)
MAX_MEMORY_USAGE=2048
MAX_CACHE_SIZE=512
MAX_BUFFER_SIZE=256

# Connection Limits
MAX_CLIENT_CONNECTIONS=1000
MAX_WEBSOCKET_CONNECTIONS=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# WebSocket Feed URLs (customize for your data sources)
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
COINBASE_WS_URL=wss://ws-feed.pro.coinbase.com
KRAKEN_WS_URL=wss://ws.kraken.com

# API Keys (for authenticated feeds)
BINANCE_API_KEY=YOUR_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_SECRET_KEY_HERE
COINBASE_API_KEY=YOUR_API_KEY_HERE
COINBASE_SECRET_KEY=YOUR_SECRET_KEY_HERE

# =============================================================================
# DEVELOPMENT/TESTING
# =============================================================================

# Development Mode
DEV_MODE=false
MOCK_DATA_ENABLED=false
TEST_DATA_PATH=/app/test-data

# Debug Configuration
DEBUG_ENABLED=false
PROFILE_ENABLED=false
TRACE_ENABLED=false